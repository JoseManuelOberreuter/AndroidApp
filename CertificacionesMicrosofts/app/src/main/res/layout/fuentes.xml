<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flecha_izquierda" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10259918" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <ScrollView
        android:layout_width="328dp"
        android:layout_height="586dp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_numeroPregunta"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="00dp"
                android:autoText="false"
                android:background="#D9D9D9"
                android:gravity="center"
                android:paddingHorizontal="50px"
                android:text="FUENTES"
                android:textColor="#03A9F4"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/pregunta_contestada"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="0px"
                android:layout_marginTop="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Link fuente 1 "
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/fuente2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="0px"
                android:layout_marginTop="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Link fuente 2"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/fuente3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="0px"
                android:layout_marginTop="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Link fuente 3"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/fuente4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="0px"
                android:layout_marginTop="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Link fuente 4"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/fuente5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="0px"
                android:layout_marginTop="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Link fuente 5"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/fuente6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="0px"
                android:layout_marginTop="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Link fuente 6"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/fuente7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="0px"
                android:layout_marginTop="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Link fuente 7"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/fuente8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="0px"
                android:layout_marginTop="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Link fuente 8"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/fuente9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="0px"
                android:layout_marginTop="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Link fuente 9"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/fuente10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="0px"
                android:layout_marginTop="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Link fuente 10"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>