                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="00dp"
                android:autoText="false"
                android:background="#D9D9D9"
                android:gravity="center"
                android:paddingHorizontal="50px"
                android:text="EXAMEN REALIZADO 1"
                android:textColor="#03A9F4"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/pregunta_contestada"
                android:layout_width="326dp"
                android:layout_height="50dp"
                android:layout_marginStart="0px"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Pregunta Contestada 1"
