<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="75dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-84dp">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_inicio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:autoText="false"
                android:background="#D9D9D9"
                android:gravity="center"
                android:text="Inicio"
                android:textColor="#03A9F4"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_hacerExamen"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="0px"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Hace examen"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_practicar"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginStart="0px"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#881B92FF"
                android:text="practicar"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_notasPreguntas"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginStart="0px"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Notas de preguntas"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_materialEstudio"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginStart="0px"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Material de estudio"
                android:textColor="#FFFFFF" />



            <Button
                android:id="@+id/btn_historialExamenes"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginStart="0px"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#881B92FF"
                android:text="historial de examenes"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_estadisticas"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginStart="0px"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#881B92FF"
                android:text="estadisticas"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_perfil"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginStart="0px"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#881B92FF"
                android:text="perfil"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_ayuda"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginStart="0px"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#881B92FF"
                android:text="ayuda y soporte"
                android:textColor="#FFFFFF" />



        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>