<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstruccionesExamenActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center_vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_numeroPregunta"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#D9D9D9"
                android:gravity="center_horizontal|top"
                android:justificationMode="none"
                android:paddingHorizontal="50px"
                android:paddingTop="10dp"
                android:text="INSTRUCCIONES"
                android:textColor="#03A9F4"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/pregunta7"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="@+id/guideline2"
                app:layout_constraintVertical_bias="0.031" />

            <TextView
                android:id="@+id/txt_preguntaActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:justificationMode="inter_word"
                android:text="Preparación Previa:  Asegúrate de haber estudiado y comprendido los materiales del curso, incluyendo los recursos recomendados por Microsoft."
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="@+id/txt_numeroPregunta" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Puntaje Requerido:  Debes obtener al menos un 70% de respuestas correctas para aprobar el examen y obtener la certificación."
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintHorizontal_bias="0.529"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Formato de Preguntas:  Todas las preguntas son de opción múltiple con una sola respuesta correcta. Lee cada pregunta detenidamente antes de seleccionar tu respuesta."
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintHorizontal_bias="0.449"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:justificationMode="inter_word"
                android:text="Duración del Examen:  Tendrás un tiempo límite de 90 minutos para completar las 50 preguntas. Administra tu tiempo de manera efectiva para asegurarte de responder a todas las preguntas."
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintHorizontal_bias="0.479"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toBottomOf="@+id/txt_preguntaActual" />


            <Button
                android:id="@+id/btn_comenzarExamen"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginStart="0px"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#881B92FF"
                android:text="Comenzar examen"
                android:textColor="#FFFFFF" />


        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>